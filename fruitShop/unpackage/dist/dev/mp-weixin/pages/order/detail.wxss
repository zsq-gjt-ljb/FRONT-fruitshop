.order-detail-container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding: 20rpx;
  padding-bottom: 120rpx;
}
.order-detail-container .page-header {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.order-detail-container .page-header .title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}
.order-detail-container .page-header .order-id {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 10rpx;
}
.order-detail-container .page-header .order-status {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}
.order-detail-container .page-header .order-status .status-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.order-detail-container .page-header .order-status text {
  font-size: 28rpx;
  color: #3b78db;
  font-weight: 500;
}
.order-detail-container .page-header .order-time-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-top: 10rpx;
}
.order-detail-container .page-header .order-time-info .create-time {
  font-size: 24rpx;
  color: #666;
}
.order-detail-container .page-header .order-time-info .timeout-status {
  font-size: 22rpx;
  color: #f50;
  background-color: #fff1f0;
  padding: 2rpx 12rpx;
  border-radius: 20rpx;
  border: 1rpx solid #ffccc7;
}
.order-detail-container .info-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.order-detail-container .info-card .products-list {
  margin-bottom: 20rpx;
}
.order-detail-container .info-card .products-list .product-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}
.order-detail-container .info-card .products-list .product-item:last-child {
  border-bottom: none;
}
.order-detail-container .info-card .products-list .product-item .product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
}
.order-detail-container .info-card .products-list .product-item .product-info {
  flex: 1;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.order-detail-container .info-card .products-list .product-item .product-info .product-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}
.order-detail-container .info-card .products-list .product-item .product-info .product-attr {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}
.order-detail-container .info-card .products-list .product-item .product-info .product-price-qty {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.order-detail-container .info-card .products-list .product-item .product-info .product-price-qty .product-price {
  font-size: 26rpx;
  color: #f50;
}
.order-detail-container .info-card .products-list .product-item .product-info .product-price-qty .product-qty {
  font-size: 26rpx;
  color: #999;
}
.order-detail-container .info-card .order-summary {
  border-top: 1rpx dashed #eee;
  padding-top: 20rpx;
}
.order-detail-container .info-card .order-summary .summary-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}
.order-detail-container .info-card .order-summary .summary-item:last-child {
  margin-bottom: 0;
}
.order-detail-container .info-card .order-summary .summary-item .label {
  font-size: 26rpx;
  color: #666;
}
.order-detail-container .info-card .order-summary .summary-item .value {
  font-size: 26rpx;
  color: #333;
}
.order-detail-container .info-card .order-summary .summary-item .value.price {
  color: #f50;
  font-weight: 500;
  font-size: 30rpx;
}
.order-detail-container .info-card .card-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.order-detail-container .info-card .card-title text {
  font-size: 30rpx;
  font-weight: 500;
  margin-left: 10rpx;
}
.order-detail-container .info-card.recommend-card .recommend-list {
  min-height: 200rpx;
}
.order-detail-container .info-card.recommend-card .recommend-list .empty-recommend {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 50rpx 0;
}
.order-detail-container .info-card.recommend-card .recommend-list .empty-recommend text {
  font-size: 26rpx;
  color: #999;
  margin-top: 20rpx;
}
.order-detail-container .info-card.time-card .time-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
}
.order-detail-container .info-card.time-card .time-item .label {
  font-size: 26rpx;
  color: #666;
}
.order-detail-container .info-card.time-card .time-item .value {
  font-size: 26rpx;
  color: #333;
}
.order-detail-container .info-card .info-content .info-row {
  display: flex;
  margin-bottom: 16rpx;
}
.order-detail-container .info-card .info-content .info-row:last-child {
  margin-bottom: 0;
}
.order-detail-container .info-card .info-content .info-row .info-label {
  width: 160rpx;
  font-size: 26rpx;
  color: #666;
}
.order-detail-container .info-card .info-content .info-row .info-value {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}
.order-detail-container .info-card .info-content .info-row .copy-btn {
  font-size: 24rpx;
  color: #3b78db;
  background-color: #f0f5ff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-left: 20rpx;
}
.order-detail-container .info-card .info-content .info-row.total-row {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx dashed #eee;
}
.order-detail-container .info-card .info-content .info-row .total-price {
  font-size: 32rpx;
  color: #f50;
  font-weight: 500;
}
.order-detail-container .action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}
.order-detail-container .action-bar .action-btn {
  height: 70rpx;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 20rpx;
  padding: 0 30rpx;
  background-color: #f5f5f5;
  color: #666;
}
.order-detail-container .action-bar .action-btn.contact-btn {
  background-color: #f5f7fa;
  color: #333;
  border: 1rpx solid #e8e8e8;
  line-height: 70rpx;
  padding: 0 30rpx;
}
.order-detail-container .action-bar .payment-section {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-right: 20rpx;
}
.order-detail-container .action-bar .payment-section .payment-info {
  display: flex;
  flex-direction: column;
}
.order-detail-container .action-bar .payment-section .payment-info .payment-label {
  font-size: 24rpx;
  color: #666;
}
.order-detail-container .action-bar .payment-section .payment-info .payment-amount {
  font-size: 32rpx;
  color: #f50;
  font-weight: bold;
}
.order-detail-container .action-bar .payment-section .pay-btn {
  height: 70rpx;
  padding: 0 40rpx;
  background-color: #f50;
  color: #fff;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
}
.order-detail-container .action-bar .payment-section .pay-btn.loading {
  opacity: 0.8;
}
.order-detail-container .action-bar .payment-section .pay-btn:active {
  opacity: 0.9;
}
.order-detail-container .debug-info {
  background-color: #fff7e6;
  padding: 10rpx 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #666;
}
.order-detail-container .time-card .time-item .value.warning {
  color: #ff9800;
  font-weight: 500;
}
.order-detail-container .time-card .time-item .value.error {
  color: #ff5252;
  font-weight: 500;
}
.order-detail-container .logistics-card .logistics-info .logistics-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.order-detail-container .logistics-card .logistics-info .logistics-header .logistics-company {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-right: 20rpx;
}
.order-detail-container .logistics-card .logistics-info .logistics-header .logistics-number {
  font-size: 24rpx;
  color: #666;
}
.order-detail-container .logistics-card .logistics-info .logistics-header .refresh-btn {
  display: flex;
  align-items: center;
  padding: 6rpx 16rpx;
  background-color: #f0f5ff;
  border-radius: 20rpx;
}
.order-detail-container .logistics-card .logistics-info .logistics-header .refresh-btn text {
  font-size: 24rpx;
  color: #3b78db;
  margin-left: 6rpx;
}
.order-detail-container .logistics-card .logistics-info .logistics-status {
  padding: 20rpx 0;
}
.order-detail-container .logistics-card .logistics-info .logistics-status .status-timeline {
  position: relative;
}
.order-detail-container .logistics-card .logistics-info .logistics-status .status-timeline:before {
  content: "";
  position: absolute;
  top: 30rpx;
  left: 16rpx;
  width: 2rpx;
  height: calc(100% - 30rpx);
  background-color: #f0f0f0;
}
.order-detail-container .logistics-card .logistics-info .logistics-status .status-timeline .timeline-item {
  display: flex;
  padding: 20rpx 0;
  position: relative;
}
.order-detail-container .logistics-card .logistics-info .logistics-status .status-timeline .timeline-item.first-item .timeline-dot {
  background-color: #3b78db;
  border: none;
}
.order-detail-container .logistics-card .logistics-info .logistics-status .status-timeline .timeline-item.first-item .timeline-status, .order-detail-container .logistics-card .logistics-info .logistics-status .status-timeline .timeline-item.first-item .timeline-time {
  color: #3b78db;
  font-weight: 500;
}
.order-detail-container .logistics-card .logistics-info .logistics-status .status-timeline .timeline-item .timeline-dot {
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  background-color: #fff;
  border: 2rpx solid #ddd;
  margin-right: 30rpx;
  margin-top: 10rpx;
  z-index: 1;
  flex-shrink: 0;
}
.order-detail-container .logistics-card .logistics-info .logistics-status .status-timeline .timeline-item .timeline-content {
  flex: 1;
}
.order-detail-container .logistics-card .logistics-info .logistics-status .status-timeline .timeline-item .timeline-content .timeline-status {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 6rpx;
}
.order-detail-container .logistics-card .logistics-info .logistics-status .status-timeline .timeline-item .timeline-content .timeline-time {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 6rpx;
}
.order-detail-container .logistics-card .logistics-info .logistics-status .status-timeline .timeline-item .timeline-content .timeline-address {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 6rpx;
}
.order-detail-container .logistics-card .logistics-info .logistics-status .status-timeline .timeline-item .timeline-content .timeline-remark {
  font-size: 24rpx;
  color: #ff9800;
  background-color: rgba(255, 152, 0, 0.1);
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  margin-top: 6rpx;
}
.order-detail-container .logistics-card .logistics-info .logistics-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}
.order-detail-container .logistics-card .logistics-info .logistics-empty .loading-icon {
  margin-bottom: 20rpx;
}
.order-detail-container .logistics-card .logistics-info .logistics-empty .loading-icon uni-icons {
  animation: rotate 1s linear infinite;
}
.order-detail-container .logistics-card .logistics-info .logistics-empty text {
  font-size: 26rpx;
  color: #999;
}
@keyframes rotate {
from {
    transform: rotate(0deg);
}
to {
    transform: rotate(360deg);
}
}