.order-list-container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding-bottom: 30rpx;
}
.order-list-container .order-tabs {
  display: flex;
  background-color: #fff;
  padding: 0 20rpx;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 10;
}
.order-list-container .order-tabs .tab-item {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
}
.order-list-container .order-tabs .tab-item.active {
  color: #3b78db;
  font-weight: 500;
}
.order-list-container .order-tabs .tab-item.active::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #3b78db;
  border-radius: 2rpx;
}
.order-list-container .order-list {
  padding: 20rpx;
}
.order-list-container .order-list .order-item {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}
.order-list-container .order-list .order-item .order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.order-list-container .order-list .order-item .order-header .order-number {
  font-size: 26rpx;
  color: #666;
}
.order-list-container .order-list .order-item .order-header .order-status {
  font-size: 26rpx;
  color: #3b78db;
  font-weight: 500;
}
.order-list-container .order-list .order-item .order-info {
  padding: 0 24rpx;
}
.order-list-container .order-list .order-item .order-info .info-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
}
.order-list-container .order-list .order-item .order-info .info-item:last-child {
  border-bottom: none;
}
.order-list-container .order-list .order-item .order-info .info-item .label {
  width: 160rpx;
  font-size: 26rpx;
  color: #666;
}
.order-list-container .order-list .order-item .order-info .info-item .value {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}
.order-list-container .order-list .order-item .order-footer {
  padding: 24rpx;
  border-top: 1rpx solid #f5f5f5;
}
.order-list-container .order-list .order-item .order-footer .order-total {
  display: block;
  text-align: right;
  margin-bottom: 20rpx;
}
.order-list-container .order-list .order-item .order-footer .order-total text {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}
.order-list-container .order-list .order-item .order-footer .order-total .total-price {
  color: #333;
  font-weight: 500;
}
.order-list-container .order-list .order-item .order-footer .order-total .total-price:last-child {
  color: #3b78db;
  font-size: 30rpx;
}
.order-list-container .order-list .order-item .order-footer .order-actions {
  display: flex;
  justify-content: flex-end;
}
.order-list-container .order-list .order-item .order-footer .order-actions .action-btn {
  height: 60rpx;
  padding: 0 30rpx;
  border: 1rpx solid #ddd;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #666;
  margin-left: 20rpx;
}
.order-list-container .order-list .order-item .order-footer .order-actions .action-btn.primary {
  border-color: #3b78db;
  color: #3b78db;
}
.order-list-container .order-list .order-item .order-footer .order-actions .action-btn:active {
  opacity: 0.8;
}
.order-list-container .empty-order {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}
.order-list-container .empty-order .empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}
.order-list-container .empty-order .empty-text {
  font-size: 28rpx;
  color: #999;
}
.order-list-container .load-more {
  text-align: center;
  padding: 30rpx 0;
}
.order-list-container .load-more text {
  font-size: 26rpx;
  color: #999;
}