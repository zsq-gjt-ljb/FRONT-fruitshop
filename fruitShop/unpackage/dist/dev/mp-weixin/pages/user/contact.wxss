.contact-page {
  padding: 30rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}
.contact-page .header {
  margin-bottom: 40rpx;
  text-align: center;
}
.contact-page .header .title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}
.contact-page .header .subtitle {
  font-size: 28rpx;
  color: #666;
  display: block;
}
.contact-page .card {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.contact-page .card .card-title {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.contact-page .card .card-title text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-left: 10rpx;
}
.contact-page .card .card-content {
  text-align: center;
}
.contact-page .card .card-content .desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  display: block;
}
.contact-page .card .card-content .contact-btn {
  background-color: #3b78db;
  color: #ffffff;
  border-radius: 40rpx;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  width: 60%;
  margin: 0 auto;
  letter-spacing: 2rpx;
}
.contact-page .card .card-content .contact-btn::after {
  border: none;
}
.contact-page .tips {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.contact-page .tips .tips-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}
.contact-page .tips .tips-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  display: block;
}