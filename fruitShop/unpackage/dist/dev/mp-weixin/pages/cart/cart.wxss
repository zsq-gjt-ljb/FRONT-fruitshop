.cart-container {
  min-height: 100vh;
  background-color: #f8f8fa;
  padding-bottom: 140rpx;
}
.cart-container .empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 30vh;
}
.cart-container .empty-cart .empty-icon {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #f0f0f3;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05);
}
.cart-container .empty-cart .empty-text {
  font-size: 32rpx;
  color: #8e8e93;
  font-weight: 400;
  margin-bottom: 60rpx;
}
.cart-container .empty-cart .go-shopping {
  width: 280rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #4B91F1, #6FB1FF);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 500;
  letter-spacing: 2rpx;
  box-shadow: 0 8rpx 20rpx rgba(75, 145, 241, 0.25);
  transition: transform 0.2s;
}
.cart-container .empty-cart .go-shopping:active {
  transform: scale(0.96);
}
.cart-container .cart-content {
  padding: 24rpx;
}
.cart-container .cart-content .cart-header {
  margin: 20rpx 10rpx 40rpx;
}
.cart-container .cart-content .cart-header .cart-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 6rpx;
  display: block;
}
.cart-container .cart-content .cart-header .cart-subtitle {
  font-size: 26rpx;
  color: #999;
}
.cart-container .product-list {
  margin-bottom: 40rpx;
}
.cart-container .product-list .product-card {
  position: relative;
  display: flex;
  background-color: #fff;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  padding: 24rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.04);
  overflow: hidden;
}
.cart-container .product-list .product-card .select-area {
  display: flex;
  align-items: center;
  padding-right: 20rpx;
}
.cart-container .product-list .product-card .select-area .checkbox {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}
.cart-container .product-list .product-card .select-area .checkbox.checked {
  background: linear-gradient(135deg, #4B91F1, #6FB1FF);
  border-color: #4B91F1;
}
.cart-container .product-list .product-card .product-content {
  flex: 1;
  display: flex;
}
.cart-container .product-list .product-card .product-content .product-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 16rpx;
  background-color: #f5f5f7;
  border: 1px solid rgba(0, 0, 0, 0.03);
}
.cart-container .product-list .product-card .product-content .product-info {
  flex: 1;
  padding-left: 24rpx;
  position: relative;
}
.cart-container .product-list .product-card .product-content .product-info .product-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
}
.cart-container .product-list .product-card .product-content .product-info .product-spec {
  display: inline-block;
  font-size: 24rpx;
  color: #999;
  background-color: #f8f8fa;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}
.cart-container .product-list .product-card .product-content .product-info .product-price {
  font-size: 34rpx;
  color: #4B91F1;
  font-weight: 600;
  margin-top: 16rpx;
}
.cart-container .product-list .product-card .product-content .product-info .quantity-control {
  position: absolute;
  bottom: 0;
  right: 0;
  display: flex;
  align-items: center;
  height: 60rpx;
  background-color: #f8f8fa;
  border-radius: 30rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
.cart-container .product-list .product-card .product-content .product-info .quantity-control .quantity-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background-color 0.2s;
}
.cart-container .product-list .product-card .product-content .product-info .quantity-control .quantity-btn:active {
  background-color: #eee;
}
.cart-container .product-list .product-card .product-content .product-info .quantity-control .quantity-btn.disabled {
  opacity: 0.5;
}
.cart-container .product-list .product-card .product-content .product-info .quantity-control .quantity-input {
  width: 80rpx;
  height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  background-color: transparent;
}
.cart-container .product-list .product-card .delete-btn {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  background: linear-gradient(to right, #ff6b6b, #ff8787);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.2);
}
.cart-container .recommendations {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.04);
}
.cart-container .recommendations .section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  position: relative;
}
.cart-container .recommendations .section-title::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: -10rpx;
  width: 60rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #4B91F1, #6FB1FF);
  border-radius: 3rpx;
}
.cart-container .recommendations .empty-recommends {
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cart-container .recommendations .empty-recommends text {
  font-size: 28rpx;
  color: #999;
}
.cart-container .cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.06);
  z-index: 100;
}
.cart-container .cart-footer .select-all {
  display: flex;
  align-items: center;
}
.cart-container .cart-footer .select-all .checkbox {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  transition: all 0.2s;
}
.cart-container .cart-footer .select-all .checkbox.checked {
  background: linear-gradient(135deg, #4B91F1, #6FB1FF);
  border-color: #4B91F1;
}
.cart-container .cart-footer .select-all text {
  font-size: 28rpx;
  color: #333;
}
.cart-container .cart-footer .price-section {
  flex: 1;
  display: flex;
  align-items: baseline;
  justify-content: flex-end;
  padding: 0 30rpx;
}
.cart-container .cart-footer .price-section .price-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}
.cart-container .cart-footer .price-section .price-value {
  font-size: 38rpx;
  font-weight: 600;
  color: #4B91F1;
}
.cart-container .cart-footer .checkout-btn {
  min-width: 220rpx;
  height: 80rpx;
  background: linear-gradient(to right, #E0E0E0, #CCCCCC);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
  transition: all 0.3s;
}
.cart-container .cart-footer .checkout-btn.active {
  background: linear-gradient(135deg, #4B91F1, #6FB1FF);
  box-shadow: 0 6rpx 16rpx rgba(75, 145, 241, 0.25);
}