.settings-container {
  min-height: 100vh;
  background-color: #f8f9fc;
  padding: 20rpx;
}
.settings-container .settings-list {
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
}
.settings-container .settings-list .settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid #f5f5f5;
}
.settings-container .settings-list .settings-item:last-child {
  border-bottom: none;
}
.settings-container .settings-list .settings-item .item-left .label {
  font-size: 28rpx;
  color: #333333;
}
.settings-container .settings-list .settings-item .item-right {
  display: flex;
  align-items: center;
}
.settings-container .settings-list .settings-item .item-right .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 16rpx;
}
.settings-container .settings-list .settings-item .item-right .value {
  font-size: 28rpx;
  color: #666666;
  margin-right: 16rpx;
}
.settings-container .settings-list .settings-item .item-right .icon-right {
  color: #999999;
  font-size: 24rpx;
}
.settings-container .logout-button {
  margin-top: 60rpx;
  background: #ff4d4f;
  color: #ffffff;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}
.settings-container .logout-button:active {
  opacity: 0.8;
}

/* 添加日期选择器样式 */
.date-picker-container {
  background-color: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  overflow: hidden;
}
.date-picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1px solid #f5f5f5;
}
.date-picker-header text {
  font-size: 28rpx;
}
.date-picker-header text:first-child {
  color: #999999;
}
.date-picker-header text:last-child {
  color: #4a90e2;
  font-weight: 500;
}
.date-picker-view {
  width: 100%;
  height: 400rpx;
}
.picker-item {
  line-height: 50px;
  text-align: center;
}