.detail-container {
  min-height: 100vh;
  background-color: #f8f8f8;
  display: flex;
  flex-direction: column;
  position: relative;
}
.detail-container .loading-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fff;
}
.detail-container .loading-container .loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f0f0f0;
  border-top-color: #4B91F1;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}
.detail-container .loading-container .loading-text {
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
}
@keyframes spin {
to {
    transform: rotate(360deg);
}
}
.detail-container .floating-back {
  position: fixed;
  top: 60rpx;
  left: 30rpx;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}
.detail-container .product-swiper {
  width: 100%;
  height: 750rpx;
}
.detail-container .product-swiper .swiper-image {
  width: 100%;
  height: 100%;
}
.detail-container .info-card {
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  margin-top: -30rpx;
  padding: 30rpx;
  position: relative;
  z-index: 10;
}
.detail-container .info-card .price-section {
  display: flex;
  align-items: flex-end;
  margin-bottom: 20rpx;
}
.detail-container .info-card .price-section .current-price {
  font-size: 42rpx;
  color: #4B91F1;
  font-weight: bold;
}
.detail-container .info-card .price-section .original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 12rpx;
  margin-bottom: 4rpx;
}
.detail-container .info-card .price-section .sales-info {
  font-size: 24rpx;
  color: #999;
  margin-left: auto;
}
.detail-container .info-card .title-section {
  margin-bottom: 16rpx;
}
.detail-container .info-card .title-section .product-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.4;
}
.detail-container .info-card .title-section .share-button {
  position: absolute;
  top: 24rpx;
  right: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: rgba(75, 145, 241, 0.1);
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
  justify-content: center;
}
.detail-container .info-card .title-section .share-button text {
  font-size: 20rpx;
  color: #4B91F1;
  margin-top: 2rpx;
}
.detail-container .info-card .desc-section {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}
.detail-container .option-card {
  background-color: #fff;
  margin-top: 16rpx;
  padding: 0 30rpx;
}
.detail-container .option-card .option-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  font-size: 28rpx;
}
.detail-container .option-card .option-item .item-label {
  color: #666;
}
.detail-container .option-card .option-item .item-value {
  display: flex;
  align-items: center;
  color: #333;
}
.detail-container .option-card .option-item .item-value text {
  margin-right: 10rpx;
}
.detail-container .detail-card {
  background-color: #fff;
  margin-top: 16rpx;
  margin-bottom: 150rpx;
  padding-bottom: 30rpx;
}
.detail-container .detail-card .card-title {
  display: flex;
  align-items: center;
  padding: 30rpx;
}
.detail-container .detail-card .card-title .title-decorator {
  width: 6rpx;
  height: 32rpx;
  background-color: #4B91F1;
  border-radius: 3rpx;
  margin-right: 16rpx;
}
.detail-container .detail-card .card-title text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}
.detail-container .detail-card .detail-content {
  padding: 20rpx;
}
.detail-container .detail-card .detail-content img, .detail-container .detail-card .detail-content image {
  width: 100% !important;
  height: auto !important;
  display: block;
  margin: 20rpx 0;
}
.detail-container .detail-card .detail-content p {
  margin: 20rpx 0;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}
.detail-container .action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  display: flex;
  background-color: #fff;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.05);
  padding-bottom: env(safe-area-inset-bottom, 0);
}
.detail-container .action-bar .action-left {
  display: flex;
  padding: 0 20rpx;
}
.detail-container .action-bar .action-left .action-icon {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 20rpx;
}
.detail-container .action-bar .action-left .action-icon text {
  font-size: 20rpx;
  color: #666;
  margin-top: 6rpx;
}
.detail-container .action-bar .action-right {
  flex: 1;
  display: flex;
  align-items: center;
  padding-right: 20rpx;
}
.detail-container .action-bar .action-right .cart-btn, .detail-container .action-bar .action-right .buy-btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 40rpx;
}
.detail-container .action-bar .action-right .cart-btn {
  background-color: rgba(75, 145, 241, 0.1);
  color: #4B91F1;
  margin-right: 16rpx;
}
.detail-container .action-bar .action-right .buy-btn {
  background: linear-gradient(to right, #4B91F1, #83B4FF);
  color: #fff;
  box-shadow: 0 6rpx 16rpx rgba(75, 145, 241, 0.2);
}
.detail-container .specs-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}
.detail-container .specs-popup .popup-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
}
.detail-container .specs-popup .popup-content {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
  border-radius: 30rpx 30rpx 0 0;
  padding-bottom: calc(env(safe-area-inset-bottom) + 20rpx);
}
.detail-container .specs-popup .popup-content .popup-header {
  display: flex;
  padding: 30rpx;
  position: relative;
  border-bottom: 1rpx solid #f5f5f5;
}
.detail-container .specs-popup .popup-content .popup-header .product-brief {
  display: flex;
}
.detail-container .specs-popup .popup-content .popup-header .product-brief .popup-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-top: -60rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
}
.detail-container .specs-popup .popup-content .popup-header .product-brief .brief-info {
  margin-left: 20rpx;
  padding-top: 10rpx;
}
.detail-container .specs-popup .popup-content .popup-header .product-brief .brief-info .popup-price {
  font-size: 36rpx;
  color: #4B91F1;
  font-weight: 600;
}
.detail-container .specs-popup .popup-content .popup-header .product-brief .brief-info .popup-stock, .detail-container .specs-popup .popup-content .popup-header .product-brief .brief-info .popup-selected {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}
.detail-container .specs-popup .popup-content .popup-header .close-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 10rpx;
}
.detail-container .specs-popup .popup-content .specs-section {
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.detail-container .specs-popup .popup-content .specs-section .specs-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}
.detail-container .specs-popup .popup-content .specs-section .specs-options {
  display: flex;
  flex-wrap: wrap;
}
.detail-container .specs-popup .popup-content .specs-section .specs-options .spec-option {
  padding: 12rpx 24rpx;
  background-color: #f5f5f5;
  color: #333;
  font-size: 26rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}
.detail-container .specs-popup .popup-content .specs-section .specs-options .spec-option .spec-price {
  margin-left: 10rpx;
  color: #4B91F1;
  font-weight: 500;
}
.detail-container .specs-popup .popup-content .specs-section .specs-options .spec-option .spec-stock {
  margin-left: 6rpx;
  font-size: 22rpx;
  color: #999;
}
.detail-container .specs-popup .popup-content .specs-section .specs-options .spec-option.active {
  background-color: rgba(75, 145, 241, 0.1);
  color: #4B91F1;
  border: 1rpx solid #4B91F1;
}
.detail-container .specs-popup .popup-content .quantity-section {
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.detail-container .specs-popup .popup-content .quantity-section .quantity-title {
  font-size: 28rpx;
  color: #333;
}
.detail-container .specs-popup .popup-content .quantity-section .quantity-adjuster {
  display: flex;
  align-items: center;
}
.detail-container .specs-popup .popup-content .quantity-section .quantity-adjuster .quantity-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  color: #333;
  font-size: 36rpx;
}
.detail-container .specs-popup .popup-content .quantity-section .quantity-adjuster .quantity-btn.minus {
  border-radius: 8rpx 0 0 8rpx;
}
.detail-container .specs-popup .popup-content .quantity-section .quantity-adjuster .quantity-btn.plus {
  border-radius: 0 8rpx 8rpx 0;
}
.detail-container .specs-popup .popup-content .quantity-section .quantity-adjuster .quantity-btn.disabled {
  color: #ccc;
}
.detail-container .specs-popup .popup-content .quantity-section .quantity-adjuster .quantity-input {
  width: 80rpx;
  height: 60rpx;
  background-color: #f5f5f5;
  text-align: center;
  font-size: 28rpx;
}
.detail-container .specs-popup .popup-content .popup-actions {
  padding: 30rpx;
  display: flex;
}
.detail-container .specs-popup .popup-content .popup-actions .action-btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 40rpx;
}
.detail-container .specs-popup .popup-content .popup-actions .action-btn.add-to-cart {
  background-color: rgba(75, 145, 241, 0.1);
  color: #4B91F1;
  margin-right: 16rpx;
}
.detail-container .specs-popup .popup-content .popup-actions .action-btn.buy-now {
  background: linear-gradient(to right, #4B91F1, #83B4FF);
  color: #fff;
  box-shadow: 0 6rpx 16rpx rgba(75, 145, 241, 0.2);
}