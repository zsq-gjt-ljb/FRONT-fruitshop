.product-manage {
  padding: 20rpx;
  background: #f5f7fa;
  min-height: 100vh;
}
.product-manage .action-bar {
  margin-bottom: 40rpx;
}
.product-manage .action-bar .add-btn {
  background: #4a90e2;
  color: white;
  border-radius: 8rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
}
.product-manage .view-toggle {
  display: flex;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
.product-manage .view-toggle .toggle-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
}
.product-manage .view-toggle .toggle-btn uni-icons {
  margin-right: 10rpx;
}
.product-manage .view-toggle .toggle-btn.active {
  background-color: #f0f7ff;
  color: #4a90e2;
  font-weight: 500;
}
.product-manage .steps-container {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  background: #fff;
  padding: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}
.product-manage .steps-container .step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33.33%;
  position: relative;
}
.product-manage .steps-container .step-item:not(:last-child):after {
  content: "";
  position: absolute;
  top: 24rpx;
  right: -50%;
  width: 100%;
  height: 2rpx;
  background: #eee;
  z-index: 1;
}
.product-manage .steps-container .step-item .step-number {
  width: 40rpx;
  height: 40rpx;
  background: #eee;
  color: #999;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-bottom: 12rpx;
  position: relative;
  z-index: 2;
}
.product-manage .steps-container .step-item .step-title {
  color: #999;
  font-size: 24rpx;
}
.product-manage .steps-container .step-item.active .step-number {
  background: #4a90e2;
  color: white;
}
.product-manage .steps-container .step-item.active .step-title {
  color: #4a90e2;
  font-weight: 500;
}
.product-manage .form-section {
  background: white;
  padding: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}
.product-manage .form-section .category-selector {
  width: 100%;
  position: relative;
}
.product-manage .form-section .category-selector .selector-input {
  box-sizing: border-box;
  width: 100%;
  height: 70rpx;
  padding: 0 24rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
}
.product-manage .form-section .category-selector .selector-input:active {
  background-color: #f9f9f9;
}
.product-manage .form-section .category-selector .selector-input .placeholder {
  color: #999;
}
.product-manage .form-section .uni-file-picker {
  margin-top: 16rpx;
}
.product-manage .form-section .switch-container {
  display: flex;
  align-items: center;
}
.product-manage .form-section .switch-container .switch-status {
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #333;
}
.product-manage .stock-section {
  background: white;
  padding: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}
.product-manage .stock-section .section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}
.product-manage .stock-section .stock-input {
  width: 100%;
  height: 70rpx;
  padding: 0 20rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  font-size: 26rpx;
  box-sizing: border-box;
}
.product-manage .specs-container {
  margin-top: 20rpx;
}
.product-manage .specs-container .spec-item {
  display: flex;
  margin-bottom: 20rpx;
  align-items: center;
}
.product-manage .specs-container .spec-item .spec-input {
  width: 22%;
  height: 70rpx;
  background-color: #f5f7fa;
  border-radius: 8rpx;
  padding: 0 20rpx;
  margin-right: 10rpx;
  font-size: 26rpx;
}
.product-manage .specs-container .spec-item .spec-input.price {
  color: #ff6b00;
}
.product-manage .specs-container .spec-item .spec-input.stock {
  color: #4a90e2;
}
.product-manage .specs-container .spec-item .remove-btn {
  min-width: 70rpx;
  height: 70rpx;
  background-color: #ff4d4f;
  color: #fff;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}
.product-manage .specs-container .spec-item .remove-btn:active {
  background-color: #ff7875;
}
.product-manage .specs-container .add-spec-btn {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  color: #4a90e2;
  font-size: 26rpx;
  border-radius: 8rpx;
  margin-top: 20rpx;
  border: 2rpx dashed #ddd;
}
.product-manage .specs-container .add-spec-btn:active {
  background-color: #e5e5e5;
}
.product-manage .action-buttons {
  margin-top: 30rpx;
  display: flex;
  gap: 24rpx;
}
.product-manage .action-buttons button {
  flex: 1;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  background: #4a90e2;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}
.product-manage .action-buttons button:nth-child(1) {
  background: #f5f7fa;
  color: #666;
}
.product-manage .action-buttons button.save-btn {
  background: #67c23a;
  color: white;
  flex: 0.8;
}
.product-manage .detail-section {
  background: white;
  padding: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}
.product-manage .detail-section .section-title {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  color: #333;
}
.product-manage .detail-section .section-subtitle {
  font-size: 26rpx;
  font-weight: 500;
  margin: 20rpx 0 12rpx;
  color: #333;
}
.product-manage .detail-section .tips {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 16rpx;
}
.product-manage .detail-section .weui-editor-container {
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}
.product-manage .detail-section .weui-editor-container .editor-edit-mode .editor-title {
  font-size: 26rpx;
  color: #666;
  padding: 15rpx 20rpx;
  background-color: #f5f5f5;
  border-bottom: 2rpx solid #eee;
}
.product-manage .detail-section .weui-editor-container .editor-edit-mode .html-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  font-size: 28rpx;
  line-height: 1.5;
  box-sizing: border-box;
  background-color: #fff;
}
.product-manage .detail-section .weui-editor-container .editor-edit-mode .weui-toolbar {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx;
  background-color: #f9f9f9;
  border-top: 2rpx solid #eee;
}
.product-manage .detail-section .weui-editor-container .editor-edit-mode .weui-toolbar .toolbar-item {
  flex: 1;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
}
.product-manage .detail-section .weui-editor-container .editor-edit-mode .weui-toolbar .toolbar-item:active {
  background: #eee;
}
.product-manage .detail-section .weui-editor-container .editor-edit-mode .weui-toolbar .toolbar-item .toolbar-icon {
  font-size: 28rpx;
  font-weight: bold;
}
.product-manage .detail-section .weui-editor-container .editor-preview-mode {
  border-top: 2rpx solid #eee;
  padding: 20rpx;
  min-height: 150rpx;
  background-color: #fff;
}
.product-manage .detail-section .weui-editor-container .editor-preview-mode .preview-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
}
.product-manage .detail-section .weui-editor-container .editor-preview-mode .preview-divider {
  height: 1rpx;
  background-color: #eee;
  margin-bottom: 15rpx;
}
.product-manage .detail-section .detail-images {
  margin-top: 20rpx;
}
.product-manage .product-list-container .list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
.product-manage .product-list-container .list-header .header-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}
.product-manage .product-list-container .list-header .search-bar {
  display: flex;
  align-items: center;
  width: 400rpx;
  height: 70rpx;
  background: #f5f7fa;
  border-radius: 35rpx;
  padding: 0 24rpx;
}
.product-manage .product-list-container .list-header .search-bar uni-icons {
  margin-right: 10rpx;
}
.product-manage .product-list-container .list-header .search-bar input {
  flex: 1;
  height: 100%;
  font-size: 26rpx;
}
.product-manage .product-list-container .product-cards {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}
.product-manage .product-list-container .product-cards .product-card {
  width: calc(50% - 20rpx);
  margin: 10rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
.product-manage .product-list-container .product-cards .product-card .card-content {
  padding: 20rpx;
}
.product-manage .product-list-container .product-cards .product-card .card-content .product-image {
  width: 100%;
  height: 240rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}
.product-manage .product-list-container .product-cards .product-card .card-content .product-info .product-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.product-manage .product-list-container .product-cards .product-card .card-content .product-info .product-title {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.product-manage .product-list-container .product-cards .product-card .card-content .product-info .product-category {
  font-size: 22rpx;
  color: #999;
}
.product-manage .product-list-container .product-cards .product-card .card-actions {
  display: flex;
  border-top: 2rpx solid #f5f5f5;
}
.product-manage .product-list-container .product-cards .product-card .card-actions .action-btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
}
.product-manage .product-list-container .product-cards .product-card .card-actions .action-btn uni-icons {
  margin-right: 6rpx;
}
.product-manage .product-list-container .product-cards .product-card .card-actions .action-btn.edit-btn {
  color: #4a90e2;
  border-right: 2rpx solid #f5f5f5;
}
.product-manage .product-list-container .product-cards .product-card .card-actions .action-btn.delete-btn {
  color: #ff4d4f;
}
.product-manage .product-list-container .product-cards .product-card .card-actions .action-btn:active {
  background-color: #f9f9f9;
}
.product-manage .product-list-container .product-cards .product-card.add-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  border: 2rpx dashed #ddd;
  background-color: #fafafa;
  box-shadow: none;
}
.product-manage .product-list-container .product-cards .product-card.add-card .add-text {
  margin-top: 20rpx;
  color: #999;
  font-size: 28rpx;
}
.product-manage .product-list-container .product-cards .product-card.add-card:active {
  background-color: #f5f5f5;
}
.product-manage .product-list-container .load-more {
  text-align: center;
  padding: 30rpx 0;
  color: #4a90e2;
  font-size: 28rpx;
}
.product-manage .product-list-container .loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 28rpx;
}
.product-manage .product-list-container .loading uni-icons {
  margin-right: 10rpx;
  animation: rotate 1s linear infinite;
}
.product-manage .product-list-container .empty-tip {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}
.editor-preview-mode .visual-preview {
  margin-top: 20rpx;
}
.editor-preview-mode .visual-preview .preview-row {
  margin-bottom: 10rpx;
}
.editor-preview-mode .visual-preview .preview-row .feature-label {
  font-size: 24rpx;
  font-weight: 500;
  color: #333;
}
.editor-preview-mode .visual-preview .preview-row .feature-preview {
  font-size: 24rpx;
  color: #666;
  margin-left: 10rpx;
}
.preview-content {
  padding: 15rpx;
  background-color: #fff;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  min-height: 100rpx;
  white-space: normal;
  word-break: break-all;
}
.preview-divider {
  height: 1rpx;
  background-color: #eee;
  margin: 20rpx 0;
}
.visual-preview {
  padding: 15rpx;
  background-color: #f9f9f9;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
}
.visual-preview .preview-row {
  display: flex;
  margin-bottom: 12rpx;
}
.visual-preview .preview-row:last-child {
  margin-bottom: 0;
}
.visual-preview .preview-row .feature-label {
  width: 180rpx;
  font-size: 24rpx;
  color: #666;
  flex-shrink: 0;
}
.visual-preview .preview-row .feature-preview {
  flex: 1;
  font-size: 24rpx;
  color: #333;
  word-break: break-all;
}
.visual-preview .preview-row .feature-preview.bold-preview {
  font-weight: bold;
}
.visual-preview .preview-row .feature-preview.italic-preview {
  font-style: italic;
}
.visual-preview .preview-row .feature-preview.underline-preview {
  text-decoration: underline;
}
.dropdown-content {
  background-color: #fff;
  border-radius: 12rpx 12rpx 0 0;
  overflow: hidden;
  animation: slideUp 0.2s ease-out;
}
.dropdown-content .popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}
.dropdown-content .popup-header .popup-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}
.dropdown-content .popup-header .close-btn {
  padding: 10rpx;
}
.dropdown-content .category-list {
  max-height: 500rpx;
  padding-bottom: 20rpx;
}
.dropdown-content .category-list .category-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 26rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.dropdown-content .category-list .category-item:active {
  background-color: #f9f9f9;
}
.dropdown-content .category-list .category-item.active {
  background-color: #f0f7ff;
}
.dropdown-content .category-list .category-item .category-name {
  font-size: 28rpx;
  color: #333;
}
.dropdown-content .category-list .loading-box, .dropdown-content .category-list .empty-box {
  padding: 40rpx 0;
  text-align: center;
  color: #999;
  font-size: 26rpx;
}
@keyframes slideUp {
from {
    transform: translateY(100%);
}
to {
    transform: translateY(0);
}
}
@keyframes rotate {
from {
    transform: rotate(0deg);
}
to {
    transform: rotate(360deg);
}
}