.discount-manage {
  padding: 30rpx;
}
.discount-manage .page-header {
  margin-bottom: 40rpx;
}
.discount-manage .page-header .title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  display: block;
}
.discount-manage .page-header .subtitle {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
  display: block;
}
.discount-manage .discount-cards {
  margin-bottom: 40rpx;
}
.discount-manage .discount-cards .discount-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}
.discount-manage .discount-cards .discount-card .card-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.discount-manage .discount-cards .discount-card .card-header .level-tag {
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  margin-right: 20rpx;
}
.discount-manage .discount-cards .discount-card .card-header .level-tag text {
  color: #fff;
  font-size: 24rpx;
  font-weight: 500;
}
.discount-manage .discount-cards .discount-card .card-header .level-tag.level-1 {
  background-color: #52c41a;
}
.discount-manage .discount-cards .discount-card .card-header .level-tag.level-2 {
  background-color: #1890ff;
}
.discount-manage .discount-cards .discount-card .card-header .level-tag.level-3 {
  background-color: #722ed1;
}
.discount-manage .discount-cards .discount-card .card-header .level-tag.level-4 {
  background-color: #eb2f96;
}
.discount-manage .discount-cards .discount-card .card-header .level-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}
.discount-manage .discount-cards .discount-card .card-body .input-group {
  margin-bottom: 20rpx;
}
.discount-manage .discount-cards .discount-card .card-body .input-group .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}
.discount-manage .discount-cards .discount-card .card-body .input-group .discount-input {
  display: flex;
  align-items: center;
  background-color: #f5f7fa;
  padding: 0 20rpx;
  border-radius: 8rpx;
  height: 80rpx;
}
.discount-manage .discount-cards .discount-card .card-body .input-group .discount-input input {
  flex: 1;
  height: 80rpx;
  font-size: 32rpx;
  color: #333;
}
.discount-manage .discount-cards .discount-card .card-body .input-group .discount-input .suffix {
  font-size: 32rpx;
  color: #333;
  margin-left: 10rpx;
}
.discount-manage .discount-cards .discount-card .card-body .discount-preview {
  display: flex;
  align-items: center;
}
.discount-manage .discount-cards .discount-card .card-body .discount-preview .preview-text {
  font-size: 28rpx;
  color: #666;
}
.discount-manage .discount-cards .discount-card .card-body .discount-preview .discount-value {
  font-size: 36rpx;
  color: #ff6b00;
  font-weight: bold;
}
.discount-manage .discount-cards .discount-card .card-footer {
  margin-top: 30rpx;
  display: flex;
  justify-content: flex-end;
}
.discount-manage .discount-cards .discount-card .card-footer .save-btn {
  padding: 0 40rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  background-color: #4a90e2;
  color: #fff;
  border-radius: 35rpx;
}
.discount-manage .discount-cards .discount-card .card-footer .save-btn:disabled {
  opacity: 0.6;
  background-color: #ccc;
}
.discount-manage .discount-tips {
  background-color: #f6f9fe;
  padding: 20rpx;
  border-radius: 8rpx;
}
.discount-manage .discount-tips .tips-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 10rpx;
}
.discount-manage .discount-tips .tips-content text {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
  line-height: 1.5;
}