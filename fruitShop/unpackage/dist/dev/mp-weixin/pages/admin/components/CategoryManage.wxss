.category-manage {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}
.category-manage .header {
  margin-bottom: 30rpx;
}
.category-manage .header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}
.category-manage .header .description {
  font-size: 24rpx;
  color: #999;
}
.category-manage .add-category-form, .category-manage .category-list {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.category-manage .add-category-form .form-title, .category-manage .add-category-form .list-title, .category-manage .category-list .form-title, .category-manage .category-list .list-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.category-manage .add-category-form .form-content, .category-manage .category-list .form-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}
.category-manage .add-category-form .category-input, .category-manage .category-list .category-input {
  height: 80rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
}
.category-manage .add-category-form .status-switch, .category-manage .category-list .status-switch {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.category-manage .add-category-form .status-switch text, .category-manage .category-list .status-switch text {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}
.category-manage .add-category-form .add-btn, .category-manage .category-list .add-btn {
  height: 80rpx;
  background-color: #4a90e2;
  color: #fff;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}
.category-manage .category-list .list-header {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 26rpx;
  color: #999;
  font-weight: 500;
}
.category-manage .category-list .empty-tip {
  padding: 40rpx 0;
  text-align: center;
  color: #999;
  font-size: 26rpx;
}
.category-manage .category-list .category-item {
  border-bottom: 1rpx solid #f0f0f0;
}
.category-manage .category-list .category-item:last-child {
  border-bottom: none;
}
.category-manage .category-list .category-row {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}
.category-manage .category-list .category-row.editing {
  background-color: #f9f9f9;
}
.category-manage .category-list .col.name {
  flex: 2;
}
.category-manage .category-list .col.status {
  flex: 1;
  display: flex;
  align-items: center;
}
.category-manage .category-list .col.status.enabled {
  color: #67c23a;
}
.category-manage .category-list .col.status.disabled {
  color: #999;
}
.category-manage .category-list .col.status text {
  margin-left: 10rpx;
}
.category-manage .category-list .col.action {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  gap: 10rpx;
}
.category-manage .category-list .edit-input {
  height: 60rpx;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  padding: 0 10rpx;
  font-size: 24rpx;
}
.category-manage .category-list .edit-btn, .category-manage .category-list .delete-btn, .category-manage .category-list .save-btn, .category-manage .category-list .cancel-btn {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.category-manage .category-list .edit-btn {
  background-color: #4a90e2;
  color: #fff;
}
.category-manage .category-list .delete-btn {
  background-color: #ff4d4f;
  color: #fff;
}
.category-manage .category-list .save-btn {
  background-color: #67c23a;
  color: #fff;
}
.category-manage .category-list .cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}