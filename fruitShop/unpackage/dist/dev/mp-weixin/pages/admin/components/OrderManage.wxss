  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.order-manage .order-cards .order-card .order-id-row .copy-btn {
  font-size: 22rpx;
  color: #3b78db;
  background-color: rgba(59, 120, 219, 0.1);
  padding: 4rpx 16rpx;
  border-radius: 30rpx;
  margin-left: 20rpx;
  border: none;
  line-height: 1.5;
  height: 44rpx;
}
.order-manage .order-cards .order-card .card-body {
  padding: 24rpx;
}
.order-manage .order-cards .order-card .card-body .info-row {
  display: flex;
  margin-bottom: 16rpx;
}
.order-manage .order-cards .order-card .card-body .info-row:last-child {
  margin-bottom: 0;
}
.order-manage .order-cards .order-card .card-body .info-row.address {
  margin-top: 8rpx;
  padding-top: 16rpx;
  border-top: 1rpx dashed #eee;
}
.order-manage .order-cards .order-card .card-body .info-row .info-item {
  flex: 1;
  display: flex;
  align-items: flex-start;
}
.order-manage .order-cards .order-card .card-body .info-row .info-item.full {
  flex: 2;
}
.order-manage .order-cards .order-card .card-body .info-row .info-item .label {
  font-size: 26rpx;
  color: #666;
  min-width: 120rpx;
}
.order-manage .order-cards .order-card .card-body .info-row .info-item .value {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  word-break: break-all;
}
.order-manage .order-cards .order-card .card-body .info-row .info-item .value.price {
  color: #ff4d4f;
  font-weight: 500;
}
.order-manage .order-cards .order-card .card-footer {
  display: flex;
  justify-content: flex-end;
  padding: 20rpx 24rpx;
  background-color: #fafafa;
  border-top: 1rpx solid #f5f5f5;
}
.order-manage .order-cards .order-card .card-footer .action-btn {
  font-size: 26rpx;
  padding: 10rpx 30rpx;
  border-radius: 8rpx;
  margin-left: 16rpx;
}
.order-manage .order-cards .order-card .card-footer .action-btn:not(.ship-btn):not(.delete-btn) {
  background-color: #f5f7fa;
  color: #3b78db;
  border: 1rpx solid #e8e8e8;
}
.order-manage .order-cards .order-card .card-footer .action-btn.ship-btn {
  background-color: #3b78db;
  color: #ffffff;
  border: none;
}
.order-manage .order-cards .order-card .card-footer .action-btn.delete-btn {
  background-color: #ff4d4f;
  color: #ffffff;
  border: none;
}
.order-manage .order-cards .empty-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  background-color: #fff;
  border-radius: 12rpx;
}
.order-manage .order-cards .empty-data .iconfont {
  font-size: 80rpx;
  color: #ddd;
  margin-bottom: 20rpx;
}
.order-manage .order-cards .empty-data text {
  font-size: 28rpx;
  color: #999;
}
.order-manage .pagination {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.order-manage .pagination .page-info {
  font-size: 26rpx;
  color: #666;
}
.order-manage .pagination .page-controls {
  display: flex;
  align-items: center;
}
.order-manage .pagination .page-controls .page-btn {
  width: 60rpx;
  height: 60rpx;
  border: 1rpx solid #e8e8e8;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ffffff;
  margin: 0 10rpx;
  padding: 0;
}
.order-manage .pagination .page-controls .page-btn:disabled {
  color: #ccc;
  background-color: #f5f5f5;
}
.order-manage .pagination .page-controls .page-number {
