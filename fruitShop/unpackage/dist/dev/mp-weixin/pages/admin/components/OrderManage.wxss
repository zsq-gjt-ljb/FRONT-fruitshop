  font-size: 20rpx;
  transform: scale(0.8);
}
.order-manage .order-cards .order-card .order-id-row {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
  background-color: #fafcff;
}
.order-manage .order-cards .order-card .order-id-row .id-label {
  font-size: 26rpx;
  color: #666;
