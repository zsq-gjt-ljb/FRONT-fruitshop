  /* 用户卡片列表 */
}
.user-manage .search-bar {
  background: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
.user-manage .search-bar .filter-options {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.user-manage .search-bar .filter-options .year-picker {
  background: #f5f7fa;
  padding: 12rpx 20rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  color: #666;
}
.user-manage .search-bar .filter-options .query-btn {
  background: #4a90e2;
  color: #fff;
  font-size: 24rpx;
  padding: 12rpx 30rpx;
  border-radius: 6rpx;
  margin: 0;
  line-height: 1.5;
}
.user-manage .search-bar .filter-options text {
  background: #f5f7fa;
  padding: 12rpx 20rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  color: #666;
}
.user-manage .user-card-list {
  padding: 0 10rpx 20rpx 10rpx;
}
.user-manage .user-card-list .user-card {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
  padding: 24rpx 20rpx 16rpx 20rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}
.user-manage .user-card-list .user-card .user-card-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.user-manage .user-card-list .user-card .user-card-header .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f0f2f5;
  flex-shrink: 0;
}
.user-manage .user-card-list .user-card .user-card-header .user-main-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}
.user-manage .user-card-list .user-card .user-card-header .user-main-info .username {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.user-manage .user-card-list .user-card .user-card-header .user-main-info .phone {
  font-size: 22rpx;
  color: #999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.user-manage .user-card-list .user-card .user-card-header .user-vip .vip-badge {
  display: inline-block;
  padding: 2rpx 12rpx;
  background: rgba(74, 144, 226, 0.1);
  color: #4a90e2;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 500;
}
.user-manage .user-card-list .user-card .user-card-body {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}
.user-manage .user-card-list .user-card .user-card-body .user-row-info {
  font-size: 22rpx;
  color: #666;
  display: flex;
  gap: 8rpx;
}
.user-manage .user-card-list .user-card .user-card-body .user-row-info .amount {
  color: #ff6b00;
  font-weight: 500;
}
.user-manage .user-card-list .user-card .user-card-footer {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-top: 10rpx;
}
.user-manage .user-card-list .user-card .user-card-footer .edit-btn {
  background: #4a90e2;
  color: #fff;
  font-size: 22rpx;
  height: 48rpx;
  line-height: 48rpx;
  border-radius: 8rpx;
  padding: 0 32rpx;
  border: none;
  white-space: nowrap;
  box-sizing: border-box;
}
.user-manage .user-card-list .user-card .user-card-footer .edit-btn:after {
  display: none;
}
.user-manage .user-card-list .loading-tip, .user-manage .user-card-list .empty-tip {
  padding: 40rpx 0;
  text-align: center;
  color: #999;
  font-size: 24rpx;
}
.user-manage .user-card-list .pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0 0 0;
  border-top: 1rpx solid #eee;
}
.user-manage .user-card-list .pagination .page-btn {
  padding: 10rpx 24rpx;
  font-size: 24rpx;
  color: #4a90e2;
}
.user-manage .user-card-list .pagination .page-btn.disabled {
  color: #ccc;
}
.user-manage .user-card-list .pagination .page-number {
  margin: 0 24rpx;
  font-size: 24rpx;
  color: #666;
}

/* 弹窗样式 */
.confirm-dialog {
  padding: 40rpx;
  width: 80%;
  background: #fff;
  border-radius: 12rpx;
}
.confirm-dialog .dialog-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
  font-weight: 500;
}
.confirm-dialog .dialog-content {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  text-align: center;
  line-height: 1.5;
}
.confirm-dialog .dialog-buttons {
  display: flex;
  justify-content: space-between;
}
.confirm-dialog .dialog-buttons button {
  flex: 1;
  margin: 0 15rpx;
  font-size: 28rpx;
  padding: 16rpx 0;
  border-radius: 8rpx;
}
.confirm-dialog .dialog-buttons button.cancel-btn {
  background: #f5f7fa;
  color: #666;
}
.confirm-dialog .dialog-buttons button.confirm-btn {
  background: #4a90e2;
  color: #fff;
}