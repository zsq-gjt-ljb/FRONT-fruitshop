.user-manage .search-bar {
  background: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
.user-manage .search-bar .filter-options {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.user-manage .search-bar .filter-options .year-picker {
  background: #f5f7fa;
  padding: 12rpx 20rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  color: #666;
}
.user-manage .search-bar .filter-options .query-btn {
  background: #4a90e2;
  color: #fff;
  font-size: 24rpx;
  padding: 12rpx 30rpx;
  border-radius: 6rpx;
  margin: 0;
  line-height: 1.5;
}
.user-manage .search-bar .filter-options text {
  background: #f5f7fa;
  padding: 12rpx 20rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  color: #666;
}
.user-manage .user-list-container {
  background: #fff;
  border-radius: 8rpx;
  padding: 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  /* 用户列表 */
  /* 分页区域 */
}
.user-manage .user-list-container .user-list {
  padding: 0;
  /* 表头 */
  /* 用户行 */
