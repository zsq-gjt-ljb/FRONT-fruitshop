}
.user-manage .user-list-container .user-list .list-header {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  padding: 16rpx 0;
  font-size: 24rpx;
  color: #666;
  border-bottom: 1rpx solid #eee;
}
.user-manage .user-list-container .user-list .list-header .header-cell {
  text-align: center;
  padding: 0 6rpx;
  box-sizing: border-box;
}
.user-manage .user-list-container .user-list .list-header .header-cell.user-info {
  flex: 3;
  text-align: left;
  padding-left: 20rpx;
}
.user-manage .user-list-container .user-list .list-header .header-cell.vip {
  flex: 1.2;
}
.user-manage .user-list-container .user-list .list-header .header-cell.gender {
  flex: 0.8;
}
.user-manage .user-list-container .user-list .list-header .header-cell.consume {
  flex: 1;
}
.user-manage .user-list-container .user-list .list-header .header-cell.operate {
  flex: 1.5;
}
.user-manage .user-list-container .user-list .user-row {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #eee;
  /* 单元格通用样式 */
}
.user-manage .user-list-container .user-list .user-row:last-child {
  border-bottom: none;
}
.user-manage .user-list-container .user-list .user-row .cell {
  text-align: center;
  padding: 0 6rpx;
  font-size: 24rpx;
  box-sizing: border-box;
}
.user-manage .user-list-container .user-list .user-row .cell.user-info {
  flex: 3;
  display: flex;
  align-items: center;
  text-align: left;
  padding-left: 20rpx;
}
.user-manage .user-list-container .user-list .user-row .cell.user-info .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f0f2f5;
  margin-right: 12rpx;
  flex-shrink: 0;
}
.user-manage .user-list-container .user-list .user-row .cell.user-info .user-details {
  flex: 1;
  overflow: hidden;
}
.user-manage .user-list-container .user-list .user-row .cell.user-info .user-details .username {
  display: block;
  font-size: 22rpx;
  color: #333;
  margin-bottom: 4rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.user-manage .user-list-container .user-list .user-row .cell.user-info .user-details .phone {
  display: block;
  font-size: 20rpx;
  color: #999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.user-manage .user-list-container .user-list .user-row .cell.vip {
  flex: 1.2;
}
.user-manage .user-list-container .user-list .user-row .cell.vip .vip-badge {
  display: inline-block;
  padding: 2rpx 8rpx;
  background: rgba(74, 144, 226, 0.1);
  color: #4a90e2;
  border-radius: 4rpx;
  font-size: 20rpx;
}
.user-manage .user-list-container .user-list .user-row .cell.gender {
  flex: 0.8;
  font-size: 22rpx;
}
.user-manage .user-list-container .user-list .user-row .cell.consume {
  flex: 1;
}
.user-manage .user-list-container .user-list .user-row .cell.consume .amount {
  color: #ff6b00;
  font-weight: 500;
  font-size: 22rpx;
}
.user-manage .user-list-container .user-list .user-row .cell.operate {
  flex: 1.5;
}
.user-manage .user-list-container .user-list .user-row .cell.operate .edit-btn {
  display: inline-block;
  background: #4a90e2;
  color: #fff;
  font-size: 15rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 6rpx;
  padding: 0 16rpx;
  margin: 0;
  border: none;
}
.user-manage .user-list-container .user-list .loading-tip, .user-manage .user-list-container .user-list .empty-tip {
  padding: 40rpx 0;
  text-align: center;
  color: #999;
  font-size: 24rpx;
}
.user-manage .user-list-container .pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0;
  border-top: 1rpx solid #eee;
}
.user-manage .user-list-container .pagination .page-btn {
  padding: 10rpx 24rpx;
  font-size: 24rpx;
  color: #4a90e2;
}
.user-manage .user-list-container .pagination .page-btn.disabled {
  color: #ccc;
}
.user-manage .user-list-container .pagination .page-number {
  margin: 0 24rpx;
  font-size: 24rpx;
  color: #666;
}

/* 弹窗样式 */
.confirm-dialog {
  padding: 40rpx;
  width: 80%;
  background: #fff;
  border-radius: 12rpx;
}
.confirm-dialog .dialog-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
  font-weight: 500;
}
.confirm-dialog .dialog-content {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  text-align: center;
  line-height: 1.5;
}
.confirm-dialog .dialog-buttons {
  display: flex;
  justify-content: space-between;
}
.confirm-dialog .dialog-buttons button {
  flex: 1;
  margin: 0 15rpx;
  font-size: 28rpx;
  padding: 16rpx 0;
  border-radius: 8rpx;
}
.confirm-dialog .dialog-buttons button.cancel-btn {
  background: #f5f7fa;
  color: #666;
}
.confirm-dialog .dialog-buttons button.confirm-btn {
  background: #4a90e2;
  color: #fff;
}