.home-manage {
  padding: 30rpx;
}
.home-manage .header {
  margin-bottom: 30rpx;
}
.home-manage .header .title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}
.home-manage .header .description {
  font-size: 26rpx;
  color: #666;
}
.home-manage .section {
  margin-bottom: 40rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}
.home-manage .section .section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}
.home-manage .section .section-desc {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 30rpx;
}
.home-manage .selected-products {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}
.home-manage .selected-products .selected-product-item {
  width: calc(33.33% - 20rpx);
  margin: 10rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 20rpx;
  position: relative;
}
.home-manage .selected-products .selected-product-item .product-thumb {
  width: 100%;
  height: 160rpx;
  border-radius: 6rpx;
  margin-bottom: 16rpx;
}
.home-manage .selected-products .selected-product-item .product-name {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  height: 72rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.home-manage .selected-products .selected-product-item .remove-btn {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 50rpx;
  height: 50rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.home-manage .selected-products .empty-selection {
  width: 100%;
  padding: 60rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}
.home-manage .search-area {
  display: flex;
  margin-bottom: 30rpx;
}
.home-manage .search-area .search-box {
  flex: 1;
  height: 80rpx;
  background-color: #f5f7fa;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  margin-right: 20rpx;
}
.home-manage .search-area .search-box input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  margin-left: 16rpx;
}
.home-manage .search-area .search-btn {
  width: 160rpx;
  height: 80rpx;
  background-color: #4a90e2;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.home-manage .product-list .product-item {
  display: flex;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.home-manage .product-list .product-item .product-thumb {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
.home-manage .product-list .product-item .product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.home-manage .product-list .product-item .product-info .product-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 10rpx;
}
.home-manage .product-list .product-item .product-info .product-price {
  font-size: 30rpx;
  color: #ff6b00;
  font-weight: 500;
}
.home-manage .product-list .product-item .product-actions {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.home-manage .product-list .product-item .product-actions .action-btn {
  width: 160rpx;
  height: 60rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
}
.home-manage .product-list .product-item .product-actions .action-btn:disabled {
  background-color: #e0e0e0 !important;
  color: #999 !important;
  cursor: not-allowed;
  opacity: 0.7;
}
.home-manage .product-list .product-item .product-actions .action-btn.banner-btn {
  background-color: #4a90e2;
  color: #fff;
}
.home-manage .product-list .product-item .product-actions .action-btn.home-btn {
  background-color: #ff9500;
  color: #fff;
}
.home-manage .product-list .empty-list {
  padding: 60rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}
.home-manage .refresh-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f7fa;
  border-radius: 6rpx;
  padding: 12rpx 20rpx;
  margin: 20rpx 0;
  width: -webkit-fit-content;
  width: fit-content;
}
.home-manage .refresh-btn text {
  font-size: 24rpx;
  color: #4a90e2;
  margin-left: 8rpx;
}
.home-manage .refresh-btn:active {
  opacity: 0.8;
}