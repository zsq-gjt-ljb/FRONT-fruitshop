.login-container {
  min-height: 100vh;
  background-color: #F1F9FF;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}
.login-container .subtitle-container {
  margin-bottom: 80rpx;
  position: absolute;
  top: 220rpx;
}
.login-container .subtitle-container .subtitle {
  font-size: 42rpx;
  color: #3b78db;
  font-weight: 400;
}
.login-container .logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 120rpx;
}
.login-container .logo-section .logo-circle {
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}
.login-container .logo-section .logo-circle .logo {
  width: 250rpx;
  height: 250rpx;
  border-radius: 50%;
}
.login-container .logo-section .logo-text {
  font-size: 36rpx;
  color: #3b78db;
  font-weight: 500;
}
.login-container .button-container {
  width: 100%;
  display: flex;
  justify-content: center;
  padding: 0 50rpx;
}
.login-container .button-container .login-button {
  width: 300rpx;
  height: 90rpx;
  background-color: #4e7bef;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 400;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 2rpx;
  box-shadow: 0 6rpx 12rpx rgba(78, 123, 239, 0.3);
  border: none;
}
.login-container .button-container .login-button::after {
  border: none;
}
.login-container .button-container .login-button:active {
  transform: scale(0.98);
  background-color: #4470e0;
}