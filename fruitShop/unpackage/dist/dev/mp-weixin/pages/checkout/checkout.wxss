.checkout-container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding-bottom: 120rpx;
}
.checkout-container .address-section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}
.checkout-container .address-section .address-content {
  display: flex;
  align-items: flex-start;
}
.checkout-container .address-section .address-content .location-icon {
  margin-right: 20rpx;
  margin-top: 6rpx;
}
.checkout-container .address-section .address-content .address-info {
  flex: 1;
}
.checkout-container .address-section .address-content .address-info .contact-info {
  margin-bottom: 12rpx;
}
.checkout-container .address-section .address-content .address-info .contact-info .name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-right: 20rpx;
}
.checkout-container .address-section .address-content .address-info .contact-info .phone {
  font-size: 28rpx;
  color: #666;
}
.checkout-container .address-section .address-content .address-info .address-detail {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}
.checkout-container .address-section .no-address {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  color: #333;
}
.checkout-container .address-section .arrow-right {
  margin-left: 20rpx;
}
.checkout-container .store-section {
  background-color: #fff;
  margin-bottom: 20rpx;
}
.checkout-container .store-section .store-header {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.checkout-container .store-section .store-header .store-icon {
  margin-right: 12rpx;
}
.checkout-container .store-section .store-header .store-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}
.checkout-container .store-section .product-list .product-item {
  display: flex;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.checkout-container .store-section .product-list .product-item:last-child {
  border-bottom: none;
}
.checkout-container .store-section .product-list .product-item .product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  background-color: #f5f5f7;
}
.checkout-container .store-section .product-list .product-item .product-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}
.checkout-container .store-section .product-list .product-item .product-info .product-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.4;
}
.checkout-container .store-section .product-list .product-item .product-info .product-spec {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}
.checkout-container .store-section .product-list .product-item .product-info .price-qty {
  display: flex;
  justify-content: space-between;
  margin-top: auto;
}
.checkout-container .store-section .product-list .product-item .product-info .price-qty .product-price {
  font-size: 30rpx;
  color: #3b78db;
  font-weight: 500;
}
.checkout-container .store-section .product-list .product-item .product-info .price-qty .product-quantity {
  font-size: 26rpx;
  color: #666;
}
.checkout-container .delivery-section,
.checkout-container .price-section {
  background-color: #fff;
  margin-bottom: 20rpx;
}
.checkout-container .delivery-section .free-shipping-notice,
.checkout-container .price-section .free-shipping-notice {
  padding: 10rpx 30rpx 20rpx;
  text-align: right;
}
.checkout-container .delivery-section .free-shipping-notice text,
.checkout-container .price-section .free-shipping-notice text {
  font-size: 24rpx;
  color: #ff5500;
}
.checkout-container .delivery-section .section-item,
.checkout-container .price-section .section-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.checkout-container .delivery-section .section-item:last-child,
.checkout-container .price-section .section-item:last-child {
  border-bottom: none;
}
.checkout-container .delivery-section .section-item .item-label,
.checkout-container .price-section .section-item .item-label {
  font-size: 28rpx;
  color: #333;
}
.checkout-container .delivery-section .section-item .item-label .discount-tag,
.checkout-container .price-section .section-item .item-label .discount-tag {
  display: inline-block;
  font-size: 22rpx;
  color: #3b78db;
  background-color: rgba(59, 120, 219, 0.1);
  padding: 2rpx 12rpx;
  border-radius: 20rpx;
  margin-left: 12rpx;
}
.checkout-container .delivery-section .section-item .item-value,
.checkout-container .price-section .section-item .item-value {
  font-size: 28rpx;
  color: #333;
}
.checkout-container .delivery-section .section-item .item-value .price,
.checkout-container .price-section .section-item .item-value .price {
  font-weight: 500;
}
.checkout-container .delivery-section .section-item .item-value .free-shipping,
.checkout-container .price-section .section-item .item-value .free-shipping {
  color: #3b78db;
}
.checkout-container .delivery-section .section-item .item-value .discount,
.checkout-container .price-section .section-item .item-value .discount {
  color: #ff5500;
}
.checkout-container .remark-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.checkout-container .remark-section .remark-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}
.checkout-container .remark-section .remark-input {
  width: 100%;
  font-size: 28rpx;
  color: #333;
}
.checkout-container .remark-section .placeholder {
  color: #999;
}
.checkout-container .submit-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}
.checkout-container .submit-bar .price-info {
  flex: 1;
  display: flex;
  align-items: baseline;
}
.checkout-container .submit-bar .price-info .total-label {
  font-size: 28rpx;
  color: #666;
}
.checkout-container .submit-bar .price-info .total-price {
  color: #3b78db;
}
.checkout-container .submit-bar .price-info .total-price .price-symbol {
  font-size: 24rpx;
}
.checkout-container .submit-bar .price-info .total-price .price-value {
  font-size: 36rpx;
  font-weight: 600;
}
.checkout-container .submit-bar .submit-btn {
  width: 240rpx;
  height: 76rpx;
  background: linear-gradient(to right, #3b78db, #4a90e2);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 38rpx;
  font-size: 30rpx;
  font-weight: 500;
  box-shadow: 0 6rpx 16rpx rgba(59, 120, 219, 0.25);
}