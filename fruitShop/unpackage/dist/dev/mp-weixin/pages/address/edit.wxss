.address-edit-container {
  min-height: 100vh;
  background-color: #f8f9fc;
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
}
.address-edit-container .saved-address {
  margin: 24rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
}
.address-edit-container .saved-address .address-select {
  margin-right: 20rpx;
  display: flex;
  align-items: flex-start;
  padding-top: 8rpx;
}
.address-edit-container .saved-address .address-select .select-circle {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #d1d1d6;
  display: flex;
  align-items: center;
  justify-content: center;
}
.address-edit-container .saved-address .address-select .select-circle.selected {
  background-color: #3b78db;
  border-color: #3b78db;
}
.address-edit-container .saved-address .address-info {
  flex: 1;
  margin-bottom: 20rpx;
}
.address-edit-container .saved-address .address-info .user-info {
  margin-bottom: 16rpx;
}
.address-edit-container .saved-address .address-info .user-info .name {
  font-size: 32rpx;
  font-weight: 500;
  margin-right: 20rpx;
}
.address-edit-container .saved-address .address-info .user-info .phone {
  font-size: 28rpx;
  color: #666;
}
.address-edit-container .saved-address .address-info .address-detail {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}
.address-edit-container .saved-address .address-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}
.address-edit-container .saved-address .address-actions .default-tag {
  display: flex;
  align-items: center;
  color: #ff9500;
  font-size: 28rpx;
}
.address-edit-container .saved-address .address-actions .default-tag .tag-icon {
  margin-right: 8rpx;
}
.address-edit-container .saved-address .address-actions .delete-btn {
  color: #ff4d4f;
  font-size: 28rpx;
}
.address-edit-container .add-address {
  margin: 24rpx;
  height: 88rpx;
  background: #ff9500;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 32rpx;
}
.address-edit-container .add-address:active {
  opacity: 0.9;
}
.address-edit-container .form-popup {
  background: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}
.address-edit-container .form-popup .popup-header {
  padding: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  border-bottom: 1rpx solid #f5f5f5;
}
.address-edit-container .form-popup .popup-header .title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}
.address-edit-container .form-popup .popup-header .close-btn {
  position: absolute;
  right: 24rpx;
  font-size: 40rpx;
  color: #999;
  line-height: 1;
}
.address-edit-container .form-popup .form-content {
  flex: 1;
  max-height: calc(80vh - 180rpx);
}
.address-edit-container .form-popup .form-group {
  padding: 0 32rpx;
}
.address-edit-container .form-popup .form-group .form-item {
  padding: 32rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
}
.address-edit-container .form-popup .form-group .form-item:last-child {
  border-bottom: none;
}
.address-edit-container .form-popup .form-group .form-item .label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
  display: block;
}
.address-edit-container .form-popup .form-group .form-item input {
  font-size: 28rpx;
  color: #333333;
}
.address-edit-container .form-popup .form-group .form-item textarea {
  width: 100%;
  font-size: 28rpx;
  color: #333333;
  line-height: 1.5;
}
.address-edit-container .form-popup .form-group .form-item .region-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.address-edit-container .form-popup .form-group .form-item .region-picker .value {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}
.address-edit-container .form-popup .form-group .form-item .region-picker .icon-right {
  color: #999999;
  font-size: 24rpx;
}
.address-edit-container .form-popup .popup-footer {
  padding: 24rpx;
  border-top: 1rpx solid #f5f5f5;
}
.address-edit-container .form-popup .popup-footer .save-button {
  height: 88rpx;
  background: #ff9500;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.address-edit-container .form-popup .popup-footer .save-button text {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
}
.address-edit-container .form-popup .popup-footer .save-button:active {
  opacity: 0.9;
}
.address-edit-container .placeholder {
  color: #999999;
}
.address-edit-container .region-popup {
  background: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
}
.address-edit-container .region-popup .popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 2rpx solid #f5f5f5;
}
.address-edit-container .region-popup .popup-header .cancel {
  color: #999999;
  font-size: 28rpx;
}
.address-edit-container .region-popup .popup-header .title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}
.address-edit-container .region-popup .popup-header .confirm {
  color: #4a90e2;
  font-size: 28rpx;
}
.address-edit-container .region-popup .picker-view {
  width: 100%;
  height: 480rpx;
}
.address-edit-container .region-popup .picker-view .picker-item {
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333333;
}