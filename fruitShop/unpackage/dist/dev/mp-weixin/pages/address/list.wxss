.address-list-container {
  min-height: 100vh;
  background-color: #f8f9fc;
  padding-bottom: 140rpx;
}
.address-list-container .search-box {
  padding: 20rpx;
  background: #ffffff;
}
.address-list-container .search-box .search-input {
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}
.address-list-container .search-box .search-input .icon-search {
  font-size: 28rpx;
  color: #999999;
  margin-right: 16rpx;
}
.address-list-container .search-box .search-input input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
}
.address-list-container .address-list {
  padding: 20rpx;
}
.address-list-container .address-list .address-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.address-list-container .address-list .address-item .address-content {
  border-bottom: 1px solid #f5f5f5;
  padding-bottom: 20rpx;
}
.address-list-container .address-list .address-item .address-content .user-info {
  margin-bottom: 10rpx;
}
.address-list-container .address-list .address-item .address-content .user-info .name {
  font-size: 32rpx;
  font-weight: 500;
  margin-right: 20rpx;
}
.address-list-container .address-list .address-item .address-content .user-info .phone {
  font-size: 28rpx;
  color: #666666;
}
.address-list-container .address-list .address-item .address-content .address-detail {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.4;
}
.address-list-container .address-list .address-item .address-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
}
.address-list-container .address-list .address-item .address-actions .default-tag {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #999999;
}
.address-list-container .address-list .address-item .address-actions .default-tag.active {
  color: #FF9500;
}
.address-list-container .address-list .address-item .address-actions .default-tag.active .tag-icon {
  color: #FF9500;
}
.address-list-container .address-list .address-item .address-actions .default-tag .tag-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
  color: #CCCCCC;
}
.address-list-container .address-list .address-item .address-actions .delete-btn {
  font-size: 28rpx;
  color: #FF4D4F;
}
.address-list-container .empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}
.address-list-container .empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}
.address-list-container .empty-state text {
  font-size: 28rpx;
  color: #999999;
}
.address-list-container .add-address-btn {
  position: fixed;
  bottom: 40rpx;
  left: 40rpx;
  right: 40rpx;
  height: 90rpx;
  background: #FF9500;
  color: #FFFFFF;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}
.address-list-container .add-address-btn:active {
  opacity: 0.9;
}