.admin-container{display:flex;height:100vh;background-color:#f5f7fa}.admin-container .debug-info{padding:20rpx;background-color:#ffe58f;margin-bottom:20rpx;font-size:24rpx}.admin-container .debug-info text{display:block;margin-bottom:10rpx}.admin-container .sidebar{width:220rpx;background-color:#fff;box-shadow:0 2rpx 12rpx rgba(0,0,0,.1);display:flex;flex-direction:column}.admin-container .sidebar .admin-info{padding:30rpx 20rpx;display:flex;flex-direction:column;align-items:center;border-bottom:1rpx solid #eee}.admin-container .sidebar .admin-info .avatar{width:120rpx;height:120rpx;border-radius:60rpx;margin-bottom:16rpx}.admin-container .sidebar .admin-info .name{font-size:28rpx;color:#333;font-weight:500}.admin-container .sidebar .menu{flex:1;padding:20rpx 0}.admin-container .sidebar .menu .menu-item{height:90rpx;display:flex;align-items:center;padding:0 20rpx;margin-bottom:10rpx}.admin-container .sidebar .menu .menu-item .menu-text{margin-left:16rpx;font-size:28rpx;color:#666}.admin-container .sidebar .menu .menu-item.active{background-color:rgba(74,144,226,.1);border-left:6rpx solid #4a90e2}.admin-container .sidebar .menu .menu-item.active .menu-text{color:#4a90e2;font-weight:500}.admin-container .content{flex:1;padding:30rpx;overflow-y:auto}
